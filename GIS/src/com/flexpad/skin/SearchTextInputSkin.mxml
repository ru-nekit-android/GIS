<!--- The default skin class for Spark TextInput component.

     @see spark.components.TextInput

      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin 
    height="30"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
    alpha.disabled="0.5"
    blendMode="normal"
    xmlns:mx="library://ns.adobe.com/flex/mx">

    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("com.flexpad.SearchTextInput")]
    ]]>
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
            import mx.events.PropertyChangeEvent;

            /**
             * @private
             */
            private static const focusExclusions:Array = [ "textDisplay" ];

            /**
             *  @private
             */
            override public function get focusSkinExclusions():Array
            {
                return focusExclusions;
            }
            ;
        ]]>
    </fx:Script>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"
            stateGroups="disabledStates"/>
        <s:State name="normalWithPrompt"/>
        <s:State name="disabledWithPrompt"
            stateGroups="disabledStates"/>
    </s:states>

    <s:filters>
        <s:DropShadowFilter 
            color="0x939393"
            angle="90"
            inner="true"
            alpha="0.68"
            distance="2"
            blurX="3"
            blurY="3"/>
    </s:filters>

    <!-- border -->
    <!--- @private -->
    <s:Rect id="border"
        left="0" right="0" top="0" bottom="0"
        radiusX="15"
        radiusY="15">
        <s:stroke>
            <s:LinearGradientStroke rotation="90">
                <s:GradientEntry color="0xb0b0b0"/>
                <s:GradientEntry color="0x555555"/>
            </s:LinearGradientStroke>
        </s:stroke>
    </s:Rect>

    <!-- fill -->
    <!--- Defines the appearance of the TextInput component's background. -->
    <s:Rect id="background"
        left="1" right="1" top="1" bottom="1"
        radiusX="15"
        radiusY="15">
        <s:fill>
            <!--- @private Defines the background fill color. -->
            <s:SolidColor id="bgFill"
                color="0xFFFFFF"/>
        </s:fill>
    </s:Rect>

    <mx:Image 
        left="10" top="8" bottom="6"
        source="{hostComponent.getStyle('icon')}"/>

    <s:RichText 
        left="27" right="15" top="10"
        verticalAlign="middle"
        styleName="hintText"
        text="{hostComponent.text==''?hostComponent.hint:''}"/>

    <!-- text -->
    <!--- @copy spark.components.supportClasses.SkinnableTextBase#textDisplay -->
    <s:RichEditableText id="textDisplay"
        left="27" right="15" top="10"
        verticalAlign="middle"
        widthInChars="10"/>

</s:SparkSkin>
