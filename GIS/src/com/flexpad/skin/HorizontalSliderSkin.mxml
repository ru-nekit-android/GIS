<?xml version="1.0" encoding="utf-8"?>
<s:Skin 
    minHeight="14"
    minWidth="100"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    alpha.disabled="0.5">

    <fx:Metadata>
    	[HostComponent("spark.components.HSlider")]
    </fx:Metadata>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
    </s:states>

    <s:Button id="track"
        height="6"
        left="0" right="0" top="4"
        skinClass="com.flexpad.skin.HorizontalSliderTrackSkin"/>
    <s:Button id="thumb"
        width="15" height="15"
        left="0" top="0"
        includeIn="normal"
        skinClass="com.flexpad.skin.SliderThumbSkin"/>


</s:Skin>
